generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       String  @id @default(cuid())
  name     String  @unique
  apodo    String?
  email    String  @unique
  password String

  createdAt DateTime   @default(now())
  tareas    Tarea[]
  contextos Contexto[]
}

model Tarea {
  id        Int      @id @default(autoincrement())
  userId    String
  title     String
  hour      String
  day       Int
  month     Int
  year      Int
  status    Int
  createdAt DateTime @default(now())

  relationUser Usuario @relation(fields: [userId], references: [id])
}

model Contexto {
  id            Int     @id @default(autoincrement())
  userId        String?
  longitudFrase Int
  adjFrec       Int
  conFrec       Int
  formalidad    Int
  pausas        Int

  Usuario Usuario? @relation(fields: [userId], references: [id])
}
